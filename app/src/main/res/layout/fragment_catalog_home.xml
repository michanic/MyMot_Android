<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/classesTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="По классам"
                android:textSize="22sp"
                android:textColor="@color/textPrimary"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="4dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/classesSlider"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>


            <TextView
                android:id="@+id/manufacturersTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="По производителю"
                android:textSize="22sp"
                android:textColor="@color/textPrimary"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="4dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/manufacturersSlider"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>


            <TextView
                android:id="@+id/volumesTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="По объему"
                android:textSize="22sp"
                android:textColor="@color/textPrimary"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="4dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/volumesSlider"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="40dp"/>


        </LinearLayout>


    </ScrollView>

</RelativeLayout>
