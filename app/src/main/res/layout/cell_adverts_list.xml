<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="1dp">

        <ImageView
            android:id="@+id/cell_image"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_alignBottom="@+id/card_view"
            android:layout_toStartOf="@+id/card_view"
            android:scaleType="centerCrop" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/advert_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title TitleTitleTitleTitleTitleTitleTitleTitle qwfwqfqw"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:paddingRight="50dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/card_view"
        android:layout_toRightOf="@+id/card_view"
        android:gravity="top"
        android:textColor="@color/textGray"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/advert_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/advert_title"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:layout_toEndOf="@+id/card_view"
        android:layout_toRightOf="@+id/card_view"
        android:gravity="top"
        android:text="Анапа"
        android:textColor="@color/textLightGray"
        android:textSize="14sp" />


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/card_view"
        android:layout_alignBottom="@+id/advert_details"
        android:layout_marginBottom="-10dp"
        android:layout_marginTop="-5dp">

        <ImageView
            android:id="@+id/favourite_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="right|top"
            android:scaleType="center"
            app:srcCompat="@drawable/ic_list_favourite_passive" />

        <TextView
            android:id="@+id/price_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/price_bg"
            android:paddingLeft="10dp"
            android:paddingTop="3dp"
            android:paddingRight="10dp"
            android:paddingBottom="3dp"
            android:text="1 000 000 р."
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_gravity="top"
            android:background="@color/separatorGray"
            />

    </FrameLayout>>


</RelativeLayout>